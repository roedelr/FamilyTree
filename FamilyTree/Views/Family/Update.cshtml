@using FamilyTree.Models
@using FamilyTree.Models.Enums
@model FamilyTree.Models.PersonModel

@{
    ViewBag.Title = "Update Personal Info";
}



<div class="row">
    
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <fieldset>
                <legend>Update Fmaily Member Info</legend>
                <div class="row">
                    @Html.LabelFor(m => m.FirstName)
                    @Html.EditorFor(m => m.FirstName)

                </div>

                <div class="row">
                    @Html.LabelFor(m => m.LastName)
                    @Html.EditorFor(m => m.LastName)
                </div>


                <div class="row">
                    @Html.LabelFor(m => m.DOB)
                    @Html.EditorFor(m => m.DOB)
                </div>

                <div class="row">
                    @Html.LabelFor(m => m.IsToMe)
                    @Html.EnumDropDownListFor(m => m.IsToMe, "Select Relationship")
                </div>

                <div class="row">
                    <br />
                    <input type="submit" value="Update" class="btn btn-default">
                </div>
            </fieldset>
        }
 
