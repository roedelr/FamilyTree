@using FamilyTree.Models
@model FamilyTree.Models.PersonModelList

@{
    ViewBag.Title = "Your Family";

}
@Scripts.Render("~/Content/Site.css")

<style>
    th, td {
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2
    }
    tr:hover {
        background-color: #d4e3e5;
    }
    th {
        font-family: Verdana,Arial,sans-serif;
        background-color: #a9c6c9;
        color: black;
    }
</style>
<h4>Family Member List</h4>


<div class="row">
    <div class="col-lg-2">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-large btn-primary" })
    </div>
</div>
<br/>
<br/>
<table class="table">
  <thead>
    <tr>
        <th></th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            BirthDay
        </th>
        <th>
            Relationship
        </th>

    </tr>
  </thead>
    <tbody>
  
    @foreach (var item in Model.PersonList)
    {

        <tr class="cellcolor">
            <td align="center">

                @Html.ActionLink("Detail", "Detail", new { FirstName = item.FirstName}) |
                @Html.ActionLink("Update", "Update", new { FirstName = item.FirstName }) |
                @Html.ActionLink("Delete", "Delete", new { FirstName= item.FirstName })
            </td>
            <td>
                @item.FirstName
            </td>
            <td>
                @item.LastName
            </td>
            <td>
                @item.DOB.Date
            </td>
            <td>
                @item.IsToMe
            </td>

        </tr>
    }
  </tbody>
</table>

